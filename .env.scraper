# .env.scraper

# Crawl limits
MAX_PAGES=80
MAX_DEPTH=3

# Concurrency / politeness
CONCURRENCY=24
BASE_DELAY_MS=900
JITTER_MS=700
REQUEST_TIMEOUT=12000

# Scoring / pruning
SCORE_THRESHOLD=5
PER_LABEL_KEEP=500
MAX_CANDIDATES_PER_LABEL=2500

# Global time limit per label (minutes)
TIME_LIMIT_MINUTES=45

# Output behavior
CLEAR_OUTPUT=1
# IMPORTANT:
# Do NOT set DRY_RUN=0 here.
# Leave it unset so the script sees DRY_RUN as false.
# For dry runs, override from the CLI: DRY_RUN=1 npm run scrape:companies
